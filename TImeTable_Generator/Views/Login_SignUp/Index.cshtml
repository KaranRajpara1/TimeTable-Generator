@model TImeTable_Generator.Models.LoginRoutine

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"/>
    <link href="@Url.Content("~/Content/Login_SignUp/css/Style.css")" rel="stylesheet" type="text/css" />
   

</head>
<body>
    @*<h2>Login Form</h2>*@
    @*<h2>Weekly Coding Challenge #1: Sign in/up Form</h2>*@
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            @using (Html.BeginForm("SignUp", "Login_SignUp", FormMethod.Post))
            {
                <h1>Create Account</h1>
                @*<div class="social-container">
            <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
            <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
            </div>*@
                @*<span>or use your email for registration</span>*@
                @*<input type="text" placeholder="Name" />*@
                @Html.TextBox("s_Name", "", new { placeholder = "Name" })
                @*<input type="email" placeholder="Email" />*@
                @Html.TextBox("s_Email", "", new { placeholder = "Email", type = "email" })
                @*<input type="password" placeholder="Password" />*@
                @Html.TextBox("s_Password", "", new { placeholder = "Password", type = "password" })
                @*<button>Sign Up</button>*@
                <input type="submit" value="Sign Up" style="border-radius: 20px;
                                                        border: 1px solid #FF4B2B;
                                                        background-color: #FF4B2B;
                                                        color: #FFFFFF;
                                                        font-size: 12px;
                                                        font-weight: bold;
                                                        padding: 12px 45px;
                                                        letter-spacing: 1px;
                                                        text-transform: uppercase;
                                                        transition: transform 80ms ease-in;"/>
            }
        </div>
        <div class="form-container sign-in-container">
            @using (Html.BeginForm("SignUp", "Login_SignUp", FormMethod.Post))
            {
                <h1>Sign in</h1>
                @*<div class="social-container">
                <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <span>or use your account</span>*@
                @*<input type="email" placeholder="Email" />
            <input type="password" placeholder="Password" />*@
                @Html.TextBox("l_Name", "", new { placeholder = "Name" })
                @Html.TextBox("l_Password", "", new { placeholder = "Password", type = "password" })
                <a href="#">Forgot your password?</a>
                @*<button>Sign In</button>*@
                <input type="submit" value="Login" style="border-radius: 20px;
                                                        border: 1px solid #FF4B2B;
                                                        background-color: #FF4B2B;
                                                        color: #FFFFFF;
                                                        font-size: 12px;
                                                        font-weight: bold;
                                                        padding: 12px 45px;
                                                        letter-spacing: 1px;
                                                        text-transform: uppercase;
                                                        transition: transform 80ms ease-in;" />
            }
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>New User?</h1>
                    <p>Sign Up with us to get started with Time Table Generator</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="@Url.Content("~/Content/Login_SignUp/js/app.js")"></script>
</body>
</html>





